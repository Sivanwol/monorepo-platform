  "prettier": "@app/prettier-config",
  "dependencies": {
    "@app/auth": "workspace:*",
    "@app/db": "workspace:*",
    "@app/shared-api": "workspace:*",
    "@app/utils": "workspace:*",
    "@logtail/node": "catalog:",
    "@trpc/server": "catalog:",
    "superjson": "catalog:",
    "trpc-openapi": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@app/eslint-config": "workspace:*",
    "@app/prettier-config": "workspace:*",
    "@app/tsconfig": "workspace:*",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "sort-package-json": "catalog:",
    "typescript": "catalog:"
  }
}
