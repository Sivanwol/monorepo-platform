{
  "name": "@app/platform-api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc && npm run sentry:sourcemaps",
    "clean": "rm -rf .turbo dist node_modules",
    "dev": "tsc",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "sort:packages": "sort-package-json",
    "typecheck": "tsc --noEmit",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org testing-zone --project mono-repo ./dist && sentry-cli --url https://sentry.io/ sourcemaps upload --org testing-zone --project mono-repo ./dist"
  },
  "prettier": "@app/prettier-config",
  "dependencies": {
    "@app/auth": "workspace:*",
    "@app/db": "workspace:*",
    "@app/shared-api": "workspace:*",
    "@app/utils": "workspace:*",
    "@sentry/cli": "^2.36.1",
    "@trpc/server": "catalog:",
    "superjson": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@app/eslint-config": "workspace:*",
    "@app/prettier-config": "workspace:*",
    "@app/tsconfig": "workspace:*",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "sort-package-json": "catalog:",
    "typescript": "catalog:"
  }
}
