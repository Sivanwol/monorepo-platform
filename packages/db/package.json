{
  "name": "@app/db",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "default": "./dist/client.js"
    },
    "./schema": {
      "types": "./dist/schema.d.ts",
      "default": "./dist/schema.js"
    }
  },
  "scripts": {
    "build": "tsc && npm run sentry:sourcemaps",
    "clean": "rm -rf .turbo dist node_modules",
    "dev": "tsc",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "migrate": "pnpm with-env drizzle-kit migrate",
    "push": "pnpm with-env drizzle-kit generate",
    "sort:packages": "sort-package-json",
    "studio": "pnpm with-env drizzle-kit studio",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "with-env": "dotenv -e ../../.env --",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org testing-zone --project mono-repo ./dist && sentry-cli --url https://sentry.io/ sourcemaps upload --org testing-zone --project mono-repo ./dist"
  },
  "prettier": "@app/prettier-config",
  "dependencies": {
    "@app/utils": "workspace:*",
    "@sentry/cli": "^2.36.1",
    "@t3-oss/env-core": "^0.10.1",
    "@vercel/kv": "catalog:vercel",
    "@vercel/postgres": "^0.9.0",
    "date-fns": "catalog:",
    "drizzle-orm": "^0.31.2",
    "drizzle-zod": "^0.5.1",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@app/eslint-config": "workspace:*",
    "@app/prettier-config": "workspace:*",
    "@app/tsconfig": "workspace:*",
    "dotenv-cli": "^7.4.2",
    "drizzle-kit": "^0.22.8",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "sort-package-json": "catalog:",
    "typescript": "catalog:"
  }
}
