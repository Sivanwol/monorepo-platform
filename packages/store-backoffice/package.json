{
  "name": "@app/store-backoffice",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "default": "./src/index.ts"
    }
  },
  "scripts": {
    "build": "tsc && npm run sentry:sourcemaps",
    "clean": "rm -rf .turbo dist node_modules",
    "dev": "tsc",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "sort:packages": "sort-package-json",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "ui-add": "pnpm dlx shadcn-ui add && prettier src --write --list-different",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org testing-zone --project mono-repo ./dist && sentry-cli --url https://sentry.io/ sourcemaps upload --org testing-zone --project mono-repo ./dist"
  },
  "prettier": "@app/prettier-config",
  "dependencies": {
    "@app/utils": "workspace:*",
    "@descope/nextjs-sdk": "catalog:",
    "@sentry/cli": "^2.36.1",
    "superjson": "2.2.1",
    "uuid": "catalog:",
    "zukeeper": "catalog:store",
    "zustand": "catalog:store"
  },
  "devDependencies": {
    "@app/eslint-config": "workspace:*",
    "@app/prettier-config": "workspace:*",
    "@app/tailwind-config": "workspace:*",
    "@app/tsconfig": "workspace:*",
    "@types/react": "catalog:react18",
    "@types/react-resizable": "catalog:ui",
    "@types/swagger-ui-react": "^4.18.3",
    "@types/uuid": "catalog:",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "react": "catalog:react18",
    "sort-package-json": "catalog:",
    "tailwindcss": "^3.4.4",
    "typescript": "catalog:"
  },
  "peerDependencies": {
    "react": "catalog:react18",
    "zod": "catalog:"
  }
}
